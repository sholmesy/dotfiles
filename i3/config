# misc
exec xset r rate 180 40
exec xrdb .Xresources
exec feh --bg-scale /home/sam/Pictures/wallhaven-295990.png

# <><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><> #

# gaps

gaps inner 75
gaps outer 0

# no gaps when only one window is open

# smart_gaps on

# <><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><> #

# binds

# window controls

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left 1px
bindsym $mod+Shift+j move down 1px
bindsym $mod+Shift+k move up 1px
bindsym $mod+Shift+l move right 1px

# split

bindsym $mod+b split h
bindsym $mod+v split v

# layout

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# resize

set $size 5 px or 5 ppt
set $small-size 1 px or 1 ppt

mode "resize" {
        bindsym shift+h resize shrink width $size
        bindsym shift+j resize grow height $size
        bindsym shift+k resize shrink height $size
        bindsym shift+l resize grow width $size
        bindsym h resize shrink width $small-size
        bindsym j resize grow height $small-size
        bindsym k resize shrink height $small-size
        bindsym l resize grow width $small-size
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# gap controls

bindsym $mod+minus        gaps inner all minus 5
bindsym $mod+plus         gaps inner all plus  5
bindsym $mod+Shift+minus  gaps outer all minus 5
bindsym $mod+Shift+plus   gaps outer all plus  5

# goto w

bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5

# move to w

bindsym $mod+Shift+1 move $window to workspace $w1
bindsym $mod+Shift+2 move $window to workspace $w2
bindsym $mod+Shift+3 move $window to workspace $w3
bindsym $mod+Shift+4 move $window to workspace $w4
bindsym $mod+Shift+5 move $window to workspace $w5

# media keys

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%

# other

bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+m floating toggle
bindsym $mod+m focus mode_toggle
bindsym $mod+q kill
bindsym $mod+Return exec urxvt
bindsym $mod+t exec google-chrome-stable --app=https://notion.so
bindsym $mod+g exec google-chrome-stable --app=https://google.com
bindsym $mod+space exec rofi -show run
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# <><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><> #

# Workspace 1
exec --no-startup-id i3-msg 'workspace 1; append_layout ~/.config/i3/workspace-1.json'
