# wm

set $w1 "1"
set $w2 "2"
set $w3 "3"
set $w4 "4"
set $w5 "5"
set $mod Mod1
set $window container
floating_modifier $mod
font pango:spacemono 12

# <><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><><> #

# appearance
#
set $nord0 #2E3440
set $nord1 #3B4252
set $nord2 #434C5E
set $nord3 #4C566A
set $nord4 #D8DEE9
set $nord5 #E5E9F0
set $nord6 #ECEFF4
set $nord7 #8FBCBB
set $nord8 #88C0D0
set $nord9 #81A1C1
set $nord10 #5E81AC
set $nord11 #BF616A
set $nord12 #D08770
set $nord13 #EBCB8B
set $nord14 #A3BE8C
set $nord15 #B48EAD

client.focused $nord1 $nord0 $nord4 $nord7 $nord7
client.unfocused $nord1 $nord0 $nord4 $nord0 $nord0
client.focused_inactive $nord1 $nord0 $nord4 $nord0 $nord0
client.urgent $nord1 $nord0 $nord4 $nord0 $nord0
client.placeholder $nord1 $nord0 $nord4 $nord0 $nord0


# windows
for_window [class=".*"] border pixel 4

